@model UpdateUserViewModel

@{ 
  ViewBag.Title = "Aanpassen";
  Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h3>Gebruiker aanpassen</h3>
<hr />

<form asp-action="Update" method="post" role="form" class="form-horizontal">
  <input asp-for="Id" type="hidden" />
  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Algemene gegevens</h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <label asp-for="UserName" class="col-md-3 control-label"></label>
            <div class="col-md-9">
              <input asp-for="UserName" class="form-control" tabindex="1" />
              <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
          </div>
          <div class="form-group">
            <label asp-for="Email" class="col-md-3 control-label"></label>
            <div class="col-md-9">
              <input asp-for="Email" class="form-control" tabindex="4" />
              <span asp-validation-for="Email" class="text-danger"></span>
            </div>
          </div>
          <div class="form-group">
            <label asp-for="PhoneNumber" class="col-md-3 control-label"></label>
            <div class="col-md-9">
              <input asp-for="PhoneNumber" class="form-control" tabindex="5" />
              <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-offset-3 col-md-9 text-right">
              <a asp-action="Index" class="btn btn-default">Terug</a>
              <input type="submit" value="Aanpassen" class="btn btn-primary" />
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Wachtwoord wijzigen</h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <label asp-for="CurrentPassword" class="col-md-3 control-label"></label>
            <div class="col-md-9">
              <input asp-for="CurrentPassword" class="form-control" tabindex="2" />
              <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
          </div>
          <div class="form-group">
            <label asp-for="NewPassword" class="col-md-3 control-label"></label>
            <div class="col-md-9">
              <input asp-for="NewPassword" class="form-control" tabindex="2" />
              <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
          </div>
          <div class="form-group">
            <label asp-for="ConfirmPassword" class="col-md-3 control-label"></label>
            <div class="col-md-9">
              <input asp-for="ConfirmPassword" class="form-control" tabindex="3" />
              <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-offset-3 col-md-9 text-right">
              <a asp-action="Index" class="btn btn-default">Terug</a>
              <input type="submit" value="Aanpassen" class="btn btn-primary" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>