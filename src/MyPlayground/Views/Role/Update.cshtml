@model UpdateRoleViewModel

@{
  ViewBag.Title = "Aanpassen";
  Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h3>Rol aanpassen</h3>
<hr />

<div class="row">
  <div class="col-md-6">
    <panel title="Algemene gegevens">
      <form asp-action="Update" method="post" role="form" class="form-horizontal">
        <input asp-for="Id" type="hidden" />
        <div class="form-group">
          <label asp-for="Name" class="col-md-3 control-label"></label>
          <div class="col-md-9">
            <input asp-for="Name" class="form-control" tabindex="1" />
            <span asp-validation-for="Name" class="text-danger"></span>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-offset-3 col-md-9 text-right">
            <a asp-action="Index" class="btn btn-default">Terug</a>
            <input type="submit" value="Aanpassen" class="btn btn-primary" />
          </div>
        </div>
      </form>
    </panel>
  </div>

  <div class="col-md-6">
    <panel title="Rechten">

    </panel>
  </div>
</div>