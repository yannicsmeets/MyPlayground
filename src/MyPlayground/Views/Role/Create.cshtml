@model CreateRoleViewModel

@{ 
  ViewBag.Title = "Toevoegen";
  Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h3>Rol toevoegen</h3>
<hr/>

<form asp-action="Create" method="post" role="form" class="form-horizontal">
  <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
  <div class="form-group">
    <label asp-for="Name" class="col-md-3 control-label"></label>
    <div class="col-md-9">
      <input asp-for="Name" class="form-control" tabindex="1" />
      <span asp-validation-for="Name" class="text-danger"></span>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-3 col-md-9 text-right">
      <a asp-action="Index" class="btn btn-default">Terug</a>
      <input type="submit" value="Toevoegen" class="btn btn-primary" />
    </div>
  </div>
</form>